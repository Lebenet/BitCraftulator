        xmlns:local="clr-namespace:BitCrafter"
        mc:Ignorable="d"
        Title="BitCraftulator" Height="Auto" Width="800" MinHeight="20"
        WindowStyle="None" 
        Background="Gray">
    
    <Grid Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
