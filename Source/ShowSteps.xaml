            <Thumb DragDelta="Thumb_DragDelta" Background="Transparent" />
        </Border>
        
        <Button Name="Close" Grid.Row="0" HorizontalAlignment="Right" Width="30" Content="X" Background="Red" FontWeight="Bold" FontSize="16"/>
        
